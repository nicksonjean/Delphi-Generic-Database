              Params.Values['Compressed'] := 'True';
              Params.Values['Encrypted'] := 'False';
              Params.Values['Max_DBProcesses'] := '50';
              Params.Values['SchemaOverride'] := '%.dbo';
              Params.EndUpdate();
              ParamsLoaded := True;
            end;
          MSSQL: // Falta Testar
            begin
              ConnectionName := 'DBMSSQL';
              DriverName := 'MSSQL';
              KeepConnection := False;
              LoginPrompt := False;
              GetDriverFunc := 'getSQLDriverMSSQL';
